<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorThemeBlue"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_marginBottom="5dp"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textSize="@dimen/textSideFont"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvTongThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/textSideFont"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorThu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi"
                android:textSize="@dimen/textSideFont"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvTongChi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/textSideFont"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorChi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá»™ng"
                android:textSize="@dimen/textSideFont"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvTong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/textSideFont"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textColor="@color/colorThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thu"
        android:textSize="20dp"
        android:layout_margin="8dp"/>
    <ListView
        android:id="@+id/lvThu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></ListView>
    <TextView
        android:textColor="@color/colorChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi"
        android:textSize="20dp"
        android:layout_margin="8dp"/>
    <ListView
        android:id="@+id/lvChi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></ListView>
</LinearLayout>